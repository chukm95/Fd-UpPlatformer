$VERTEX$
#version 450 core
uniform mat4 projectionMatrix;
uniform mat4 transformMatrix;

layout (location = 0) in vec3 v_position;
layout (location = 1) in vec4 v_color;

out vec4 f_color;

void main() {
	f_color = v_color;
	gl_Position = projectionMatrix * transformMatrix * vec4(v_position.xyz, 1);
}

$FRAGMENT$
#version 450 core

in vec4 f_color;

out vec4 color;

void main(){
	color = f_color;
}